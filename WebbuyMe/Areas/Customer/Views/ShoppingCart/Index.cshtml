@model WebbuyMe.Models.ViewModel.ShoppingCartViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<form action="/" method="post">
    <br />
    <br />
    <h2 class="text-info">Your Shopping Cart</h2>
    <br />

    @if (Model.Products.Count > 0)
    {
        <div class="container border border-secondary rounded" style="padding:15px">
            <div class="row">
                <div class="col-md-8" style="border-right:1px solid #bbb9b9;">
                    <table class="table table-striped" width="100%">
                        <tr class="table-info">
                            <th style="text-align:center; width:20%">

                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.Products.FirstOrDefault().Name"></label>
                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.Products.FirstOrDefault().Price"></label>
                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.Products.FirstOrDefault().ShadeColor"></label>
                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.Products.FirstOrDefault().ProductTypes.Name"></label>
                            </th>
                            <th style="text-align:center;">
                            </th>
                        </tr>
                        @foreach (var item in Model.Products)
                        {
                            <tr style="padding:50px">
                                <td>
                                    <a asp-area="Customer"
                                       asp-route-id="@item.Id"
                                       asp-action="Details" asp-controller="Home">
                                        <img src="@item.Image" width="100%"
                                             style="margin:auto; display:block;
                                              border-radius:5px; border:1px solid #bbb9b9;" />
                                    </a>
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(c => item.Name)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(c => item.Price)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(c => item.ShadeColor)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(c => item.ProductTypes.Name)
                                </td>
                                <td style="text-align:center">
                                    <button type="submit"
                                            asp-action="remove" asp-route-id="@item.Id"
                                            class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="col-md-4" style="padding-left:30px;">
                    <div class="row">
                        <div class="col-12">
                            <label>Name</label>
                        </div>
                        <div class="col-12">
                            <input asp-for="@Model.Appointments.CustomerName"
                                   class="form-control" />
                        </div>

                        <div class="col-12">
                            <label>Phone Number</label>
                        </div>
                        <div class="col-12">
                            <input asp-for="@Model.Appointments.CustomerPhoneNumber"
                                   class="form-control" />
                        </div>


                        <div class="col-12">
                            <label>Email</label>
                        </div>
                        <div class="col-12">
                            <input asp-for="@Model.Appointments.CustomerEmail"
                                   class="form-control" />
                        </div>

                        <div class="col-12">
                            <label>Appointment Date</label>
                        </div>
                        <div class="col-12">
                            <input asp-for="@Model.Appointments.AppointmentDate"
                                   value="" type="text" id="datepicker"
                                   class="form-control" />
                            @*<div class="input-group date" data-provide="datepicker">
                                    <input type="text" asp-for="@Model.Appointments.AppointmentDate" class="form-control">
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-th"></span>
                                    </div>
                                </div>*@
                        </div>


                        <div class="col-12">
                            <label>Appointment Time</label>
                        </div>
                        <div class="col-12">
                            <input asp-for="@Model.Appointments.AppointmentTime"
                                   value="" type="text" class="timepicker
                                   form-control" />
                        </div>



                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div>No item added to the shopping chart</div>
    }

</form>

@section Scripts{
    <script>
        $('.timepicker').timepicker({
            timeFormat: 'h:mm p',
            interval: 30,
            minTime: '10',
            maxTime: '3:00pm',
            //defaultTime: '11',
            startTime: '10:00',
            dynamic: true,
            dropdown: true,
            scrollbar: true
        });


        //$(function () {
        //    $("#datepicker").datepicker({
        //        minDate: +1, maxDate:"+3M"
        //    });
        //});


    </script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>

}